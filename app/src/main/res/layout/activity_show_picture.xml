<FrameLayout
    android:id="@id/llShowPictureBg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@id/tvCurrentPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="1/2"/>


        <ImageButton
            android:id="@id/ivMore"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="right"
            android:background="@drawable/btn_main_action"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_more"/>

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">

        <ScrollView
            android:id="@id/svShowPicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <ImageView
                android:id="@id/ivShowPicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"/>
        </ScrollView>

        <com.shine.look.weibo.ui.views.byakugallery.GalleryViewPager
            android:id="@id/gvpLargeTouchPics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

    </FrameLayout>


</FrameLayout>
